<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="home"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>


    <Button
        android:id="@+id/opencv_test"
        android:text="opencv 测试"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>


    <Button
        android:id="@+id/star_align_enter_btn"
        android:text="@string/star_align_enter_btn_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dof_calc_enter_btn"
        android:text="@string/dof_calc_enter_btn_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/exposure_enter_btn"
        android:text="@string/exposure_enter_btn_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/image_scanner"
        android:text="@string/image_scanner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/image_edit"
        android:text="@string/image_edit_enter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
