<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.staralign.StarAlignBaseActivity">


    <include layout="@layout/toolbar_main"/>


    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shuhart.stepview.StepView
            android:id="@+id/photo_operate_step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:selectedCircleColor="@color/colorAccent"
            app:selectedTextColor="@color/black"

            app:nextTextColor="@color/colorAccent"
            app:nextStepLineColor="@color/colorAccent"

            app:doneCircleColor="@color/colorAccent"
            app:doneStepLineColor="@color/colorPrimaryDark"

            app:selectedStepNumberColor="@color/black"
            app:doneStepMarkColor="@color/white"
            app:doneTextColor="@color/colorPrimaryDark"

            android:typeface="@font/iran_sans_mobile"
            app:animationType="All"
            android:padding="16dp"
            app:stepPadding="4dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/photo_operate_rv"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/photo_operate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/star_align_btn_select_label"
        android:textColor="@color/white"
        android:background="@color/blue_dark"
        android:layout_gravity="center_horizontal"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="2dp"
        fbutton:cornerRadius="15dp"
         />


    <!--<Button-->
        <!--android:id="@+id/graffiti_test_btn"-->
        <!--android:text="涂鸦测试"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


    <!--<Button-->
        <!--android:id="@+id/grab_cut_test_btn"-->
        <!--android:text="抠图测试"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


</LinearLayout>
