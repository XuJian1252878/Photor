<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_flash_off_btn"
            android:padding="12dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/popup_flash_off"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_flash_on_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/popup_flash_on"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_flash_auto_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/popup_flash_auto"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_flash_torch_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/popup_flash_torch"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_hdr_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_hdr_on_white_48dp"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_audio_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_audio_on_white"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/camera_sounds_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_sounds_on_white"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="#63636363"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/camera_grid_setting_label"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.contrarywind.view.WheelView
            android:id="@+id/camera_grid_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="#63636363"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/camera_white_balance_setting_label"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/camera_white_balance_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:np_width="180dp"
            app:np_height="60dp"
            app:np_dividerThickness="1dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="#88FFFFFF"
            app:np_selectedTextColor="#FFFFFFFF"
            app:np_textColor="#FFFFFF"
            app:np_dividerDistance="80dp"
            app:np_textSize="13dp"
            app:np_value="3" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="#63636363"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/camera_resolution_setting_label"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/camera_resolution_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:np_width="60dp"
            app:np_height="180dp"
            app:np_dividerThickness="1dp"
            app:np_orientation="vertical"
            app:np_dividerColor="#88FFFFFF"
            app:np_selectedTextColor="#FFFFFFFF"
            app:np_textColor="#FFFFFF"
            app:np_dividerDistance="60dp"
            app:np_textSize="13dp"
            app:np_value="3" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="#63636363"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/camera_layout_width_label"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/camera_layout_width_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_width="100dp"
                app:np_height="40dp"
                app:np_dividerThickness="1dp"
                app:np_orientation="horizontal"
                app:np_dividerColor="#88FFFFFF"
                app:np_selectedTextColor="#FFFFFFFF"
                app:np_textColor="#FFFFFF"
                app:np_dividerDistance="60dp"
                app:np_textSize="10dp"
                app:np_value="3" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/camera_layout_height_label"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/camera_layout_height_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_width="120dp"
                app:np_height="60dp"
                app:np_dividerThickness="1dp"
                app:np_orientation="horizontal"
                app:np_dividerColor="#88FFFFFF"
                app:np_selectedTextColor="#FFFFFFFF"
                app:np_textColor="#FFFFFF"
                app:np_dividerDistance="80dp"
                app:np_textSize="12dp"
                app:np_value="3" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="#63636363"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/camera_video_length_btn"
            android:padding="10dp"
            android:background="#63636363"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_video_on_white"
            android:layout_width="60dp"
            android:layout_height="40dp" />


        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/camera_video_length_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:np_width="80dp"
            app:np_height="40dp"
            app:np_dividerThickness="1dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="#88FFFFFF"
            app:np_selectedTextColor="#FFFFFFFF"
            app:np_textColor="#FFFFFF"
            app:np_dividerDistance="80dp"
            app:np_textSize="12dp"
            app:np_value="3" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="#63636363"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/camera_video_quality_label"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/camera_video_quality_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:np_width="180dp"
            app:np_height="60dp"
            app:np_dividerThickness="1dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="#88FFFFFF"
            app:np_selectedTextColor="#FFFFFFFF"
            app:np_textColor="#FFFFFF"
            app:np_dividerDistance="80dp"
            app:np_textSize="12dp"
            app:np_value="3" />


        <TextView
            android:text="@string/camera_video_codec_label"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/camera_video_codec_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:np_width="180dp"
            app:np_height="60dp"
            app:np_dividerThickness="1dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="#88FFFFFF"
            app:np_selectedTextColor="#FFFFFFFF"
            app:np_textColor="#FFFFFF"
            app:np_dividerDistance="80dp"
            app:np_textSize="12dp"
            app:np_value="3" />


    </LinearLayout>

</LinearLayout>