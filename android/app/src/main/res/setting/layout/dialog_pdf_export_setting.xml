<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/vn.mbm.phimp.me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/pdf_export_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pdf_export_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_dark_appbar"
                android:padding="24dp"
                android:text="@string/pdf_export_title"
                android:textColor="@color/md_dark_primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="4dip" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 图片文件在pdf中的显示设置 -->
                    <LinearLayout
                        android:padding="@dimen/card_elevation"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pdf_image_display_one_page_label"
                            android:text="@string/pdf_image_display_one_page_label"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/md_grey_400" />

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/pdf_image_display_one_page_picker"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="@dimen/size_100dp"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            app:np_dividerThickness="1dp"
                            app:np_height="60dp"
                            app:np_dividerColor="@color/blue_light"
                            app:np_selectedTextColor="@color/blue_light"
                            app:np_orientation="vertical"
                            app:np_textColor="@color/colorPrimary"
                            app:np_value="2" />

                    </LinearLayout>

                    <!-- 添加水印 -->
                    <LinearLayout
                        android:padding="@dimen/card_elevation"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pdf_image_watermark_label"
                            android:text="@string/pdf_image_watermark_label"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@color/md_grey_400" />

                        <Switch
                            android:id="@+id/pdf_watermark_switch"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOn="@string/pdf_image_yes"
                            android:textOff="@string/pdf_image_no"
                            android:textColor="@color/md_grey_400"
                            android:switchMinWidth="@dimen/size_50dp"
                            android:padding="@dimen/sub_small_spacing"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/md_grey_400"
                            android:text="@string/pdf_image_watermark_content_label"
                            />

                        <EditText
                            android:id="@+id/pdf_image_watermark_content"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/sub_small_spacing"
                            android:hint="@string/pdf_image_watermark_content_hint"/>

                    </LinearLayout>


                    <!-- 添加头注 -->
                    <LinearLayout
                        android:padding="@dimen/card_elevation"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pdf_image_headers_label"
                            android:text="@string/pdf_image_headers_label"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@color/md_grey_400" />

                        <Switch
                            android:id="@+id/pdf_headers_switch"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOn="@string/pdf_image_yes"
                            android:textOff="@string/pdf_image_no"
                            android:textColor="@color/md_grey_400"
                            android:switchMinWidth="@dimen/size_50dp"
                            android:padding="@dimen/sub_small_spacing"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/md_grey_400"
                            android:text="@string/pdf_image_headers_content_label"
                            />

                        <EditText
                            android:id="@+id/pdf_image_headers_content"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/sub_small_spacing"
                            android:hint="@string/pdf_image_headers_content_hint"/>

                    </LinearLayout>


                    <!-- 添加尾注 -->
                    <LinearLayout
                        android:padding="@dimen/card_elevation"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pdf_image_footer_label"
                            android:text="@string/pdf_image_footer_label"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@color/md_grey_400" />

                        <Switch
                            android:id="@+id/pdf_footer_switch"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOn="@string/pdf_image_yes"
                            android:textOff="@string/pdf_image_no"
                            android:textColor="@color/md_grey_400"
                            android:switchMinWidth="@dimen/size_50dp"
                            android:padding="@dimen/sub_small_spacing"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/md_grey_400"
                            android:text="@string/pdf_image_footer_content_label"
                            />

                        <EditText
                            android:id="@+id/pdf_image_footer_content"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/sub_small_spacing"
                            android:hint="@string/pdf_image_footer_content_hint"/>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>